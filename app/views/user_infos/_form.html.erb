<div class="container">
<%= form_for @user_info, :html =>{:multipart => true} do |f| %>
 
  <% if @user_info.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user_info.errors.count, "error") %> prohibited this user_info from being saved:</h2>

      <ul>
      <% @user_info.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </div>
  
  <p>
    <%= f.file_field :image, onchange: "validateFiles(this);",
    data: { max_file_size: 5.megabytes }
    %>
  </p>

  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>
</div>
