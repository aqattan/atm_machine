<div class="container">
<p id="notice"><%= notice %></p>

<h1>Listing Atm Machines</h1>

<%= form_tag atm_machines_path, :method => :get do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search Near", :name => nil, class:"btn btn-primary" %>
  </p>
<% end %>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>ATM Name</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @atm_machines.each do |atm_machine| %>
      <tr>
        <td>ATM <%=atm_machine.id%></td>
        <td><%= atm_machine.address %></td>
        <td><%= link_to 'Show', atm_machine, class:"btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New ATM Machine', new_atm_machine_path, class:"btn btn-primary btn-lg btn-block"%>
</div>